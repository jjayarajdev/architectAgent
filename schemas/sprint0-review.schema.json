{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Sprint 0 EA Review Input",
  "type": "object",
  "required": ["repository", "changeRequest", "context"],
  "properties": {
    "repository": {
      "type": "object",
      "required": ["url", "branch"],
      "properties": {
        "url": {
          "type": "string",
          "pattern": "^https://github.com/[^/]+/[^/]+",
          "description": "GitHub repository URL"
        },
        "branch": {
          "type": "string",
          "default": "main"
        },
        "codebasePath": {
          "type": "string",
          "description": "Path to main codebase if monorepo"
        }
      }
    },
    "changeRequest": {
      "type": "object",
      "required": ["title", "description", "scope"],
      "properties": {
        "title": {
          "type": "string",
          "minLength": 10
        },
        "description": {
          "type": "string",
          "minLength": 50
        },
        "scope": {
          "type": "object",
          "properties": {
            "functionalAreas": {
              "type": "array",
              "items": { "type": "string" }
            },
            "components": {
              "type": "array",
              "items": { "type": "string" }
            },
            "dataEntities": {
              "type": "array",
              "items": { "type": "string" }
            },
            "integrations": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "businessObjectives": {
          "type": "array",
          "items": { "type": "string" }
        },
        "constraints": {
          "type": "array",
          "items": { "type": "string" }
        },
        "timeline": {
          "type": "string"
        }
      }
    },
    "context": {
      "type": "object",
      "properties": {
        "enterpriseLandscape": {
          "type": "object",
          "properties": {
            "existingServices": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "type": { "type": "string" },
                  "endpoint": { "type": "string" },
                  "capabilities": { "type": "array", "items": { "type": "string" } }
                }
              }
            },
            "sharedLibraries": {
              "type": "array",
              "items": { "type": "string" }
            },
            "dataStores": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": { "type": "string" },
                  "type": { "type": "string" },
                  "purpose": { "type": "string" }
                }
              }
            }
          }
        },
        "architecturalStandards": {
          "type": "object",
          "properties": {
            "patterns": {
              "type": "array",
              "items": { "type": "string" }
            },
            "security": {
              "type": "array",
              "items": { "type": "string" }
            },
            "dataGovernance": {
              "type": "array",
              "items": { "type": "string" }
            },
            "scalability": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "operationalContext": {
          "type": "object",
          "properties": {
            "currentOwners": {
              "type": "array",
              "items": { "type": "string" }
            },
            "supportModel": {
              "type": "string",
              "enum": ["24x7", "business-hours", "on-call", "managed-service"]
            },
            "slaRequirements": {
              "type": "object",
              "properties": {
                "availability": { "type": "string" },
                "responseTime": { "type": "string" },
                "throughput": { "type": "string" }
              }
            }
          }
        },
        "businessMetrics": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "currentValue": { "type": "string" },
              "targetValue": { "type": "string" },
              "measurementMethod": { "type": "string" }
            }
          }
        }
      }
    }
  }
}